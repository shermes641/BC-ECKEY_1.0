<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/openQuitEC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPEN &amp; QUIT"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/openEC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/openQuitEC"
        android:layout_marginTop="15dp"
        android:text="OPEN DOOR" />

    <Button
        android:id="@+id/discoverableEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openEC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="LIST PAIRED DEVICES" />

    <Button
        android:id="@+id/turnONEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discoverableEC"
        android:layout_centerHorizontal="true"
        android:text="TURN_ON" />

    <Button
        android:id="@+id/turnOFFEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turnONEC"
        android:layout_centerHorizontal="true"
        android:text="TURN_OFF" />

    <Button
        android:id="@+id/quitEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turnOFFEC"
        android:layout_centerHorizontal="true"
        android:text="QUIT" />

</RelativeLayout>